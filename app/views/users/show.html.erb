	<% @companies.each do |c| %>
	<% if current_user %>
	<%= link_to "#{c.name}", company_path(c) %>
 	<% else %>
	<%= c.name %>
	<% end %>
	<br>
<% end %>
</div>
<%#= @companies.name %>
